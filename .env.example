# =================================================================
# CONFIGURAÇÃO DO TRANSCRITOR COM DIARIZAÇÃO - PORTUGUÊS BRASIL
# =================================================================

# Token de acesso do Hugging Face (OBRIGATÓRIO)
# Obtenha em: https://huggingface.co/settings/tokens
HF_TOKEN=seu_token_do_hugging_face_aqui

# =================================================================
# CONFIGURAÇÕES DE ENTRADA
# =================================================================

# Arquivo de entrada padrão (quando não especificado na linha de comando)
INPUT_FILE=exemplo.mp4

# Diretório de entrada padrão para processamento em lote
INPUT_DIR=input

# =================================================================
# CONFIGURAÇÕES DO MODELO WHISPER
# =================================================================

# Modelo Whisper a ser usado
# Opções: tiny, base, small, medium, large, large-v2, large-v3
# Recomendação: medium (bom balance) ou large (máxima qualidade)
WHISPER_MODEL=medium

# Idioma principal (pt para português brasileiro)
WHISPER_LANGUAGE=pt

# Configurações específicas do Whisper
WHISPER_TASK=transcribe
WHISPER_TEMPERATURE=0.0
WHISPER_BEST_OF=5
WHISPER_BEAM_SIZE=5

# =================================================================
# CONFIGURAÇÕES DE SAÍDA
# =================================================================

# Formato(s) de saída (separados por vírgula)
# Opções: txt, json, srt, vtt, tsv
OUTPUT_FORMAT=txt

# Diretório de saída
OUTPUT_DIR=output

# Prefixo para arquivos de saída
OUTPUT_PREFIX=transcricao_

# Incluir timestamp no nome do arquivo
INCLUDE_TIMESTAMP=true

# =================================================================
# CONFIGURAÇÕES DE DIARIZAÇÃO (IDENTIFICAÇÃO DE ORADORES)
# =================================================================

# Número de oradores (auto para detecção automática)
NUM_SPEAKERS=auto

# Número mínimo de oradores para detecção automática
MIN_SPEAKERS=1

# Número máximo de oradores para detecção automática
MAX_SPEAKERS=10

# Modelo de diarização
DIARIZATION_MODEL=pyannote/speaker-diarization-3.1

# =================================================================
# CONFIGURAÇÕES DE PERFORMANCE
# =================================================================

# Usar GPU se disponível (true/false)
USE_GPU=true

# Dispositivo específico (auto, cpu, cuda, cuda:0, etc.)
DEVICE=auto

# Número de threads para processamento CPU
NUM_THREADS=4

# Tamanho do batch para processamento
BATCH_SIZE=16

# =================================================================
# CONFIGURAÇÕES DE ÁUDIO
# =================================================================

# Taxa de amostragem do áudio (16000 é ideal para fala)
AUDIO_SAMPLE_RATE=16000

# Número de canais (1 para mono, 2 para estéreo)
AUDIO_CHANNELS=1

# Codec de áudio para extração de vídeo
AUDIO_CODEC=pcm_s16le

# Formato de áudio temporário
TEMP_AUDIO_FORMAT=wav

# =================================================================
# CONFIGURAÇÕES AVANÇADAS
# =================================================================

# Habilitar logs detalhados (true/false)
VERBOSE_LOGGING=false

# Nível de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Manter arquivos temporários após processamento
KEEP_TEMP_FILES=false

# Diretório para arquivos temporários
TEMP_DIR=temp

# Timeout para processamento (em segundos, 0 para sem limite)
PROCESSING_TIMEOUT=0

# =================================================================
# CONFIGURAÇÕES DE OTIMIZAÇÃO PARA PORTUGUÊS BRASILEIRO
# =================================================================

# Usar modelo específico para português (experimental)
USE_PORTUGUESE_MODEL=false

# Aplicar pós-processamento específico para português
PORTUGUESE_POSTPROCESSING=true

# Correções de texto comuns em português brasileiro
ENABLE_TEXT_CORRECTIONS=true

# Normalização de texto em português
NORMALIZE_PORTUGUESE_TEXT=true

# =================================================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# =================================================================

# Modo de desenvolvimento (habilita logs extras)
DEV_MODE=false

# Profiling de performance
ENABLE_PROFILING=false

# Cache de modelos
ENABLE_MODEL_CACHE=true

# Diretório de cache
CACHE_DIR=.cache

# =================================================================
# CONFIGURAÇÕES DE INTEGRAÇÃO
# =================================================================

# Habilitar API REST (experimental)
ENABLE_API=false

# Porta da API
API_PORT=8000

# Host da API
API_HOST=0.0.0.0

# Habilitar interface web (experimental)
ENABLE_WEB_UI=false

# Porta da interface web
WEB_UI_PORT=5000

# =================================================================
# CONFIGURAÇÕES DE MONITORAMENTO
# =================================================================

# Habilitar métricas Prometheus
ENABLE_METRICS=false

# Porta para métricas
METRICS_PORT=9090

# Habilitar notificações por email
ENABLE_EMAIL_NOTIFICATIONS=false

# Configurações de email (se habilitado)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_TO=

# =================================================================
# CONFIGURAÇÕES DE QUALIDADE
# =================================================================

# Filtro de ruído automático
AUTO_DENOISE=false

# Normalização de volume automática
AUTO_NORMALIZE_VOLUME=false

# Detecção e remoção de silêncio
REMOVE_SILENCE=false

# Limiar de confiança para transcrição (0.0 a 1.0)
CONFIDENCE_THRESHOLD=0.0

# =================================================================
# CONFIGURAÇÕES ESPECÍFICAS PARA CASOS DE USO BRASILEIROS
# =================================================================

# Configurações para reuniões corporativas
CORPORATE_MODE=false

# Configurações para entrevistas jornalísticas
INTERVIEW_MODE=false

# Configurações para podcasts
PODCAST_MODE=false

# Configurações para audiências jurídicas
LEGAL_MODE=false

# Configurações para aulas/palestras
EDUCATION_MODE=false

# =================================================================
# EXEMPLO DE CONFIGURAÇÕES POR AMBIENTE
# =================================================================

# Para desenvolvimento local (modelos pequenos, sem GPU)
# WHISPER_MODEL=small
# USE_GPU=false
# VERBOSE_LOGGING=true
# DEV_MODE=true

# Para produção (modelos grandes, com GPU)
# WHISPER_MODEL=large-v3
# USE_GPU=true
# VERBOSE_LOGGING=false
# DEV_MODE=false

# Para processamento em lote
# BATCH_SIZE=32
# NUM_THREADS=8
# PROCESSING_TIMEOUT=3600